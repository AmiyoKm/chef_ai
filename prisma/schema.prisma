// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model recipe {
  id          String @id @default(cuid())
  userId      String
  title       String
  ingredients String
  instruction String
  vegan       Boolean
  calorie     Int?
  tags        String 
  date        DateTime @default(now())
}

model Chat {
  id           String @id @default(cuid())
  userId       String
  title        String
  content      String
  date        DateTime @default(now())
  
}